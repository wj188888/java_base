<?xml version="1.0" encoding="UTF-8" ?>
<web-app>
    <!--注册servlet-->
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.wangjie.servlet.HelloServlet</servlet-class>
    </servlet>

    <!--一个servlet对应一个Mapping：映射-->
    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <!--请求路径-->
        <url-pattern>
            /kuangshen
        </url-pattern>
    </servlet-mapping>
</web-app>
